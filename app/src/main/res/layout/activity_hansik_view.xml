<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.myproject01.Hansik_view">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/hansik_num"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:background="#6C9FFF"
        android:textColor="#FFFFFF"
        android:textSize="35dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <TextView
        android:id="@+id/hansik_title"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <ImageView
        android:id="@+id/hansik_img"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <TextView
        android:id="@+id/hansik_info"
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <TextView
        android:id="@+id/hansik_moreinfo"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="＋ MORE INFO ＋"
        android:background="#08000000"/>
    <LinearLayout
        android:id="@+id/hansik_moreinfo_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#08000000">
        <LinearLayout
            android:paddingLeft="20dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textSize="15dp"
                android:text="주소  :  "/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textSize="15dp"
                android:text="전화  :  "/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp" />

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp" />
            <TextView
                android:id="@+id/hansik_address"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textSize="15dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp" />
            <TextView
                android:id="@+id/hansik_tel"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textSize="15dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:background="#08000000"
        android:layout_width="match_parent"
        android:layout_height="15dp" />
    <TextView
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

</LinearLayout>
