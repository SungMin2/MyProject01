<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.myproject01.Setting">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#2B2B2B"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageButton
            android:id="@+id/setting_back_bt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#2B2B2B"
            app:srcCompat="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="25dp"
            android:gravity="center"
            android:textColor="#EAEAEA"
            android:text="SETTING"
            android:layout_weight="0.85" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#EAEAEA"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#2B2B2B"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/setting_tip"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="50dp"
            android:layout_weight="0.9"
            android:gravity="start|center"
            android:textSize="20dp"
            android:textColor="#EAEAEA"
            android:text="어머? 사용 팁!" />

        <ImageButton
            android:id="@+id/setting_tip_bt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="10dp"
            android:layout_weight="0.1"
            android:background="#2B2B2B"
            app:srcCompat="@drawable/front" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B3B3B3"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#2B2B2B"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/setting_use"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="50dp"
            android:layout_weight="0.9"
            android:gravity="start|center"
            android:textSize="20dp"
            android:textColor="#EAEAEA"
            android:text="이용 약관" />

        <ImageButton
            android:id="@+id/setting_use_bt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="10dp"
            android:layout_weight="0.1"
            android:background="#2B2B2B"
            app:srcCompat="@drawable/front" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#EAEAEA"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#2B2B2B"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/setting_push"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="50dp"
            android:layout_weight="0.9"
            android:gravity="start|center"
            android:textSize="20dp"
            android:textColor="#EAEAEA"
            android:text="푸시 알림 사용" />

        <Switch
            android:id="@+id/setting_push_bt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="10dp"
            android:layout_weight="0.1"
            android:background="#2B2B2B"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B3B3B3"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#2B2B2B"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/setting_where"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="50dp"
            android:layout_weight="0.9"
            android:gravity="start|center"
            android:textSize="20dp"
            android:textColor="#EAEAEA"
            android:text="위치 정보 수집 동의" />

        <Switch
            android:id="@+id/setting_where_bt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="10dp"
            android:layout_weight="0.1"
            android:background="#2B2B2B"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B3B3B3"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#2B2B2B"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/setting_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="50dp"
            android:layout_weight="0.9"
            android:gravity="start|center"
            android:textSize="20dp"
            android:textColor="#EAEAEA"
            android:text="친구에게 '어머?' 추천하기" />

        <ImageButton
            android:id="@+id/setting_share_bt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="20dp"
            android:layout_weight="0.1"
            android:background="#2B2B2B"
            app:srcCompat="@drawable/share3" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#EAEAEA"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#2B2B2B"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/setting_ver1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="50dp"
            android:layout_weight="0.9"
            android:gravity="start|center"
            android:textSize="20dp"
            android:textColor="#EAEAEA"
            android:text="앱 버전" />

        <TextView
            android:id="@+id/setting_ver2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:paddingRight="15dp"
            android:gravity="center"
            android:textSize="12dp"
            android:textColor="#EAEAEA"
            android:text="v1.23" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
