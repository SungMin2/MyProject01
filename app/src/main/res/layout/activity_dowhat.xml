<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.myproject01.Dowhat">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/content2z"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dowhat_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingLeft="30dp"
            android:textSize="30dp"
            android:text="" />

        <TextView
            android:id="@+id/dowhat_date_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingLeft="30dp"
            android:textSize="20dp"
            android:text="" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:text="" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:orientation="horizontal"
            android:gravity="center">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="5dp">

                <ImageView
                    android:id="@+id/dowhat_img1"
                    android:layout_width="205dp"
                    android:layout_height="120dp"
                    app:srcCompat="@drawable/trip" />

                <TextView
                    android:id="@+id/dowhat_img1_tv"
                    android:layout_width="205dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:background="#55000000"
                    android:textColor="#FFFFFF"
                    android:text="여행지" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="5dp">

                <ImageView
                    android:id="@+id/dowhat_img2"
                    android:layout_width="165dp"
                    android:layout_height="120dp"
                    app:srcCompat="@drawable/show" />

                <TextView
                    android:id="@+id/dowhat_img2_tv"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:background="#55000000"
                    android:textColor="#FFFFFF"
                    android:text="전시회" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:orientation="horizontal"
            android:gravity="center">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="5dp">

                <ImageView
                    android:id="@+id/dowhat_img3"
                    android:layout_width="185dp"
                    android:layout_height="120dp"
                    app:srcCompat="@drawable/movie2" />

                <TextView
                    android:id="@+id/dowhat_img3_tv"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:background="#55000000"
                    android:textColor="#FFFFFF"
                    android:text="영화"  />

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="5dp">

                <ImageView
                    android:id="@+id/dowhat_img4"
                    android:layout_width="185dp"
                    android:layout_height="120dp"
                    app:srcCompat="@drawable/festival" />

                <TextView
                    android:id="@+id/dowhat_img4_tv"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:background="#55000000"
                    android:textColor="#FFFFFF"
                    android:text="공연·축제" />

            </FrameLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:text="" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#B3B3B3"
            android:text="" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingLeft="30dp"
                android:textSize="20dp"
                android:text="나의 관심 태그"
                android:layout_weight="0.92" />

            <ImageButton
                android:id="@+id/dowhat_hashtag_bt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/setting" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:text="" />

        <TextView
            android:layout_width="340dp"
            android:layout_height="2dp"
            android:background="#B3B3B3"
            android:text="" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="" />

        <ImageButton
            android:id="@+id/dowhat_hashtag_bt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            app:srcCompat="@drawable/plus" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="60dp"
            android:textSize="20dp"
            android:text="관심 태그를 설정해 주세요!" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#B3B3B3"
            android:text=""/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:textSize="20dp"
            android:text="카테고리"
            android:layout_weight="0.92" />

        <TextView
            android:layout_width="340dp"
            android:layout_height="2dp"
            android:background="#B3B3B3"
            android:text="" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:text="" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="30dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:paddingBottom="20dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/dowhat_sport_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="#FFFFFF"
                        app:srcCompat="@drawable/ball" />

                    <TextView
                        android:id="@+id/dowhat_sport_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="스포츠·레져" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="30dp"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:paddingBottom="20dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/dowhat_shop_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/cart" />

                    <TextView
                        android:id="@+id/dowhat_shop_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="쇼핑" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="30dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:paddingBottom="20dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/dowhat_trip_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="#FFFFFF"
                        app:srcCompat="@drawable/airplane" />

                    <TextView
                        android:id="@+id/dowhat_trip_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="여행" />

                </LinearLayout>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="30dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:paddingBottom="20dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/dowhat_heal_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="#FFFFFF"
                        app:srcCompat="@drawable/gift" />

                    <TextView
                        android:id="@+id/dowhat_heal_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="코스여행" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="30dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:paddingBottom="20dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/dowhat_food_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="#FFFFFF"
                        app:srcCompat="@drawable/love" />

                    <TextView
                        android:id="@+id/dowhat_food_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="푸드" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="30dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:paddingBottom="20dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/dowhat_festival_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="#FFFFFF"
                        app:srcCompat="@drawable/heart" />

                    <TextView
                        android:id="@+id/dowhat_festival_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="축제" />

                </LinearLayout>

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="30dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:paddingBottom="20dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/dowhat_hotel_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="#FFFFFF"
                        app:srcCompat="@drawable/tv" />

                    <TextView
                        android:id="@+id/dowhat_hotel_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="숙박" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="30dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:paddingBottom="20dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/dowhat_movie_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="#FFFFFF"
                        app:srcCompat="@drawable/rec" />

                    <TextView
                        android:id="@+id/dowhat_movie_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="영화" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="30dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:paddingBottom="20dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/dowhat_show_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="#FFFFFF"
                        app:srcCompat="@drawable/picture" />

                    <TextView
                        android:id="@+id/dowhat_show_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="전시회" />

                </LinearLayout>
            </TableRow>
        </TableLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#B3B3B3"/>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
